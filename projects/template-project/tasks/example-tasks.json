{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Project Tasks",
  "description": "Task management file following JSON Schema standard",
  "type": "object",
  "properties": {
    "project": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Project name"
        },
        "version": {
          "type": "string",
          "description": "Project version"
        }
      },
      "required": ["name", "version"]
    },
    "tasks": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/task"
      }
    }
  },
  "required": ["project", "tasks"],
  "definitions": {
    "task": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique task identifier",
          "pattern": "^[0-9]+(\\.[0-9]+)*$"
        },
        "title": {
          "type": "string",
          "description": "Task title"
        },
        "description": {
          "type": "string",
          "description": "Brief description of the task"
        },
        "details": {
          "type": "string",
          "description": "Detailed implementation notes"
        },
        "status": {
          "type": "string",
          "enum": ["pending", "in_progress", "completed", "blocked"],
          "description": "Current task status"
        },
        "priority": {
          "type": "string",
          "enum": ["low", "medium", "high"],
          "description": "Task priority level"
        },
        "dependencies": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Array of task IDs this task depends on"
        },
        "assignedTo": {
          "type": "string",
          "description": "Person or team assigned to the task"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Task creation timestamp"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "Last update timestamp"
        },
        "testStrategy": {
          "type": "string",
          "description": "How to verify task completion"
        },
        "subtasks": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/task"
          },
          "description": "Nested subtasks"
        }
      },
      "required": ["id", "title", "description", "status", "priority", "dependencies"]
    }
  },
  "example": {
    "project": {
      "name": "Example Project",
      "version": "1.0.0"
    },
    "tasks": [
      {
        "id": "1",
        "title": "PHASE 1: Project Setup",
        "description": "Initial project setup and configuration",
        "details": "Set up project structure, configure development environment, and establish basic workflows.",
        "status": "completed",
        "priority": "high",
        "dependencies": [],
        "assignedTo": "Development Team",
        "createdAt": "2025-01-01T00:00:00Z",
        "updatedAt": "2025-01-02T00:00:00Z",
        "testStrategy": "Verify project structure exists, configuration files are in place, and development server starts successfully.",
        "subtasks": [
          {
            "id": "1.1",
            "title": "Initialize Repository",
            "description": "Create Git repository and initial structure",
            "details": "Initialize Git repository, create directory structure, and add initial configuration files.",
            "status": "completed",
            "priority": "high",
            "dependencies": [],
            "assignedTo": "Developer",
            "createdAt": "2025-01-01T00:00:00Z",
            "updatedAt": "2025-01-01T12:00:00Z",
            "testStrategy": "Verify repository exists, .gitignore is configured, and initial commit is made."
          },
          {
            "id": "1.2",
            "title": "Configure Development Environment",
            "description": "Set up development tools and dependencies",
            "details": "Install required dependencies, configure linting, formatting, and development scripts.",
            "status": "completed",
            "priority": "high",
            "dependencies": ["1.1"],
            "assignedTo": "Developer",
            "createdAt": "2025-01-01T00:00:00Z",
            "updatedAt": "2025-01-01T18:00:00Z",
            "testStrategy": "Run npm install, verify all dependencies install correctly, and test development scripts."
          }
        ]
      },
      {
        "id": "2",
        "title": "PHASE 2: Core Implementation",
        "description": "Implement core functionality",
        "details": "Build main features and core business logic.",
        "status": "in_progress",
        "priority": "high",
        "dependencies": ["1"],
        "assignedTo": "Development Team",
        "createdAt": "2025-01-02T00:00:00Z",
        "updatedAt": "2025-01-03T00:00:00Z",
        "testStrategy": "Run test suite, verify all features work as expected, and check code coverage.",
        "subtasks": [
          {
            "id": "2.1",
            "title": "Implement Feature A",
            "description": "Build primary feature",
            "details": "Implement core feature with proper error handling and validation.",
            "status": "in_progress",
            "priority": "high",
            "dependencies": [],
            "assignedTo": "Developer",
            "createdAt": "2025-01-02T00:00:00Z",
            "updatedAt": "2025-01-03T00:00:00Z",
            "testStrategy": "Write unit tests, integration tests, and verify feature works end-to-end."
          },
          {
            "id": "2.2",
            "title": "Implement Feature B",
            "description": "Build secondary feature",
            "details": "Implement secondary feature that depends on Feature A.",
            "status": "pending",
            "priority": "medium",
            "dependencies": ["2.1"],
            "assignedTo": "Developer",
            "createdAt": "2025-01-02T00:00:00Z",
            "updatedAt": "2025-01-02T00:00:00Z",
            "testStrategy": "Test feature integration, verify dependencies work correctly, and check edge cases."
          }
        ]
      },
      {
        "id": "3",
        "title": "PHASE 3: Testing and Deployment",
        "description": "Final testing and deployment preparation",
        "details": "Complete testing, fix issues, and prepare for deployment.",
        "status": "pending",
        "priority": "high",
        "dependencies": ["2"],
        "assignedTo": "Development Team",
        "createdAt": "2025-01-02T00:00:00Z",
        "updatedAt": "2025-01-02T00:00:00Z",
        "testStrategy": "Run full test suite, perform manual testing, and verify deployment process.",
        "subtasks": [
          {
            "id": "3.1",
            "title": "Write Integration Tests",
            "description": "Create comprehensive integration tests",
            "details": "Write tests covering all integration points and workflows.",
            "status": "pending",
            "priority": "high",
            "dependencies": [],
            "assignedTo": "QA Team",
            "createdAt": "2025-01-02T00:00:00Z",
            "updatedAt": "2025-01-02T00:00:00Z",
            "testStrategy": "Run integration test suite and verify all tests pass."
          }
        ]
      }
    ]
  }
}




